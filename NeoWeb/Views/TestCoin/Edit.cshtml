@model NeoWeb.Models.TestCoin

@{
    ViewData["Title"] = "备注";
}
<div class="row coin-back">
    <h2 class="col-md-12 m1">添加备注</h2>
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group m3">
                <p class="bold-font"><label>姓名</label> @Model.Name</p>
            </div>
            <div class="form-group m3">
                <label asp-for="Remark"></label>
                <textarea class="form-control" asp-for="Remark"></textarea>
                <span asp-validation-for="Remark" class="text-danger"></span>
            </div>
            <div class="m3">
                <input type="submit" value="保存" class="btn-static btn3" />
            </div>
        </form>
    </div>
</div>

<div class="back-to-list m3">
    <a onclick="document.referrer === '' ?
          window.location.pathname = '/Testnet/list' :
          window.history.back();">返回上一页</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
