    </div>
    <p class="down-hint t2 m2"> @Localizer["Wallets developed by third party/community. Please contact the corresponding parties for technical support."]</p>
</div>
@section Scripts{
    <script>
        $(function () {
            var test = window.location.hash.substr(1);
            var num = parseInt(test);
            if (num) {
                $("#downTab li").eq(num - 1).addClass("downtab-select");
                switch (num) {
                    case 1: $(".download-mobile").addClass("down-select"); break;
                    case 2: $(".download-desktop").addClass("down-select"); break;
                    case 3: $(".download-web").addClass("down-select"); break;
                    default: break;
                }
            } else {
                $("#downTab li").eq(1).addClass("downtab-select");
                $(".download-desktop").addClass("down-select");
            }

            $("#downTab li").click(function () {
                $(".downtab-select").removeClass("downtab-select");
                $(this).addClass("downtab-select");
                $(".down-select").removeClass("down-select");
                switch ($(this).index()) {
                    case 0: $(".download-mobile").addClass("down-select"); break;
                    case 1: $(".download-desktop").addClass("down-select"); break;
                    case 2: $(".download-web").addClass("down-select"); break;
                }
            })
        })
        $("#menu_list a").css("border-bottom", "none")
        $("#menu_list li.menu-item [href='/download']").css("border-bottom", "2px solid #58bf00")
    </script>
}