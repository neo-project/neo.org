@model NeoWeb.Models.Event
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="event-detail mb-2 text-left">
    <div class="row mt-3">
        <div class="col-12 col-sm-4 col-md-3">
        @if (String.IsNullOrEmpty(Model.Cover))
        {
            <img class="type-img mb-2" src="@String.Format("/images/event/{0}.jpg", Model.Type)">
        }
        else
        {
            <img class="type-img mb-2" src="@String.Format("/upload/{0}", Model.Cover)">
        }
        </div>
        <div class="col-12 col-sm-8 col-md-9">
            <p class="e-detail-title">
                <a class="t2" href="~/event/details/@Model.Id">@Model.Name</a>
            </p>
            <div class="mt-2">
                <i class="iconfont">&#xe620;</i><span class="@Localizer["d-none-zh"]">@Model.Country.Name</span><span class="@Localizer["d-none"]">@Model.Country.ZhName</span> - <span>@Model.City</span>
            </div>
            <div class="mt-2">
                <span>@Model.StartTime.ToString("yyyy-MM-dd") / @Model.EndTime.ToString("yyyy-MM-dd")</span>
            </div>
        </div>
    </div>
</div>