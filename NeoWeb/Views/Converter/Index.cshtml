@section Scripts
{
    <script>
        $('[data-toggle="tooltip"]').tooltip();
        //地址复制
        $(function () {
            var clipboard = new ClipboardJS('.copy');
            clipboard.on('success', function (t) {
                $(t.trigger).attr("title", "已复制!").tooltip("_fixTitle").tooltip("show").attr("title", "复制到剪贴板").tooltip("_fixTitle");
            });
            clipboard.on("error", function (t) {
                var e = /Mac/i.test(navigator.userAgent) ? "⌘" : "Ctrl-";
                var n = "请按 " + e + "C 复制";

                $(t.trigger).attr("title", n).tooltip("_fixTitle").tooltip("show").attr("title", "复制到剪贴板").tooltip("_fixTitle");
            });
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.4/clipboard.min.js"></script>
