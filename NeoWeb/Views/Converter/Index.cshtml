@{
    ViewData["Title"] = "Neo3 Converter";
}
<div class="p1 bg3">
    <h1 class="w800">Neo 3.0 数据转换</h1>
    <p class="mt5 w600">支持地址、脚本哈西、公钥、大小端序、整数、字符串、十六进制字符串、Application Log、Base64 编码等的转换</p>
</div>
<form action="/converter/index" method="post">
    <label class="col-form-label" for="input">请输入待转换的文本</label>
    @if (ViewBag.Input != null)
    {
        <textarea class="form-control" name="input" rows=2>@ViewBag.Input</textarea>
    }
    else
    {
        <textarea class="form-control" name="input" rows=2></textarea>
    }
    <input type="submit" value="转换" class="btn btn-primary mt-2" />
</form>
@if (ViewBag.Result != null)
{
    <div>结果如下：</div>
    @foreach (var item in ViewBag.Result as List<string>)
    {
        <p>@item</p>
    }
}
