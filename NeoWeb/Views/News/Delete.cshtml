@model NeoWeb.Models.News

@{
    ViewData["Title"] = "Delete News";
}
<div class="p1 text-center">
    <h1 class="w800">Are you sure you want to delete this?</h1>
    <p class="mt5 w600">@Html.DisplayFor(model => model.ChineseTitle)</p>
    <p class="mt5 w600">@Html.DisplayFor(model => model.EnglishTitle)</p>
    <div class="mt5">
        <div class="mt-3">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="my-4">
                    <input type="submit" value="Delete" class="btn mt5" />
                </div>
                <div class="my-4">
                    <a asp-controller="discover" asp-action="index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>