@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="~/css/account.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/account.min.css" asp-append-version="true" />
    </environment>
}
<div class="container account-container">
    <h2 class="text-center m2">@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-4">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <h5>Create a new account.</h5>
                <hr />
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <small><span asp-validation-for="Email" class="text-danger"></span></small>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <small><span asp-validation-for="Password" class="text-danger"></span></small>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <small><span asp-validation-for="ConfirmPassword" class="text-danger"></span></small>
                </div>
                <div class="form-group text-center m3">
                    <button type="submit" class="btn btn-secondary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
