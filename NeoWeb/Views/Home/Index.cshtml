@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@section Styles{
    <environment include="Development">
        <link href="/css/homepage.css" rel="stylesheet" />
        <link href="/lib/animate.css/animate.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="@Helper.CDN/css/homepage.min.css" rel="stylesheet" />
        <link href="@Helper.CDN/lib/animate.css/animate.min.css" rel="stylesheet" />
    </environment>
}
@* loading页面 - loading page *@ 
<div class="load-page">
    <div class="span">
        <div class="square"></div>
    </div>
</div>

@* 背景滚动效果 - background scrolling effect *@
<div class="scroll-page city-back">
    <div class="home-scroll scroll-five" data-0="background-position-x:0px" data-end="background-position-x:200px;"></div>
    <div class="home-scroll scroll-four" data-0="background-position-x:0px" data-end="background-position-x:400px;"></div>
    <div class="home-scroll scroll-thr" data-0="background-position-x:0px" data-end="background-position-x:600px;"></div>
    <div class="home-scroll scroll-sec" data-0="background-position-x:0px" data-end="background-position-x:800px;"></div>
    <div class="home-scroll scroll-fri" data-0="background-position-x:0px" data-end="background-position-x:2000px;"></div>
    <div class="@Localizer["scroll-acr-en"] d-none d-sm-block" data-0="transform: translateX(0em);" data-1000="transform: translateX(-120em);"></div>
    <div class="@Localizer["scroll-ver-fri-en"] d-none d-sm-block" data-0="transform: translateY(0em);" data-1000="transform: translateY(-100em);"></div>
    <div class="@Localizer["scroll-ver-sec-en"] d-none d-sm-block" data-0="transform: translateY(0em);" data-1000="transform: translateY(-70em);"></div>
    <div class="home-scroll scroll-top"></div>
</div>

@* 基本块 - Home page *@
<div class="home-page-content" id="homeFri">
    <div class="row">
        <div class="back-mask"></div>
        <div class="midpoint home-text-fir">
            <h1>@Localizer["NEO - An Open Network For Smart Economy"]</h1>
        </div>
    </div>
    <ul class="news">
        @foreach (var item in (ViewBag.News as List<NeoWeb.Models.News>))
        {
            <li>
                <a href="@item.Link" target="_blank">@item.Title</a>
            </li>
        }
    </ul>
</div>
<div class="home-page-content">
    <div class="container body-content  home-neo-intro">
        <div class="row text-white t2">
            <div class="col-12">
                <p class="h1 m1 text-white">@Localizer["What is NEO"]</p>
            </div>
            <div class="col-sm-6 text-left p2">
                @Localizer["NEO is a non-profit community-driven blockchain project. It utilizes blockchain technology and digital identity to digitize assets and automate the management of digital assets using smart contracts. Using a distributed network, it aims to create a \"Smart Economy\"."]
            </div>
            <div class="col-sm-6 text-left p2">
                @Localizer["NEO was founded in 2014 and was open sourced on GitHub in June 2015. NEO believes that community development is its top priority. NEO has a huge developer community around the world, such as CoZ, NEL and NeoResearch, who continuously contribute to NEO development. Millions of community members are active on Reddit, Discord, Github and Twitter."]
            </div>
        </div>

        <div class="row wow fadeIn" data-wow-duration="1s" data-wow-delay="0.5s">
            <div class="col-sm-9 p2 formula">
                <h2 class="wow fadeIn" data-wow-duration=".8s" data-wow-delay="1s"><span>@Localizer["Digital Assets"]</span> + <span>@Localizer["Digital Identity"]</span> + <span>@Localizer["Smart Contract"]</span></h2>
                <h2 class="wow fadeIn" data-wow-duration=".5s" data-wow-delay="1.3s"><span>=</span></h2>
                <h1 class="wow fadeIn" data-wow-duration=".8s" data-wow-delay="1.6s"><span class="green-text">@Localizer["Smart Economy"]</span></h1>
            </div>
        </div>
        <p class="t2 text-white p2">@Localizer["Want to learn more? Please see"] <a class="bold-font text-white" href="javascript:" data-toggle="modal" data-target="#myModal">@Localizer["NEO Technical Features"]</a></p>
        <p><img width="50" src="@Helper.CDN/images/home-icon.svg" /></p>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-center">@Localizer["NEO Technical Features"]</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/coin.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["The technology underlying NEO supports multiple types of digital assets. Users can register, transfer and trade at will on NEO."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/bank.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["Digital certificates are supported, placing trust into the public chain. This provides full legal protection for all assets digitized through the NEO platform."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/networking.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["Facilitate P2P exchange of digital assets. Buyers and sellers of digital assets and currencies will be handled peer-to-peer without the need for third party exchanges."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/contract.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["Turing-complete smart contract, which will have high certainty and finality, support parallel operation, sharding and unlimited scalability when run in NeoVM."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/startup.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["NeoContract supports multiple programming languages such as C#, Java, and Python. Developers can rapidly develop smart contracts based on the NEO platform without learning a unique language."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/think.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["Neo Virtual Machine (NeoVM): NEO's lightweight stack-based virtual machine provides shorter startup times with efficient execution. Deterministic calling tree-technology allows NEO to achieve unlimited theoretical scalability."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/teamwork.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["Consensus nodes use Byzantine Fault Tolerance Algorithm to reach consensus and ensure the finality of transactions. It also ensures that the system keeps its finality and availability as long as Byzantine fault occurs on less than 1/3 of the nodes."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/networking2.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["Comprises Cross-chain Assets Swap Protocol and Cross-chain distributed transaction protocol and can achieve atomic assets swap and guarantee the operation consistency of smart contracts executed on different chains."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/flask.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["Introduced Lattice cryptography-based signing and encryption technique to avoid quantum crisis by Turing encryption and decryption problem into the Shortest Vector Problem (SVP), which cannot be solved by current quantum computers."]</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="home-page-content back-color home-down">
    <div class="container home-detail zindex">
        <div class="row">
            <div class="col-md-6 p2">
                <h1 class="m2">@Localizer["NEO Client"]</h1>
                <p class="t2 m2">
                    @Localizer["The NEO Team and community have created various wallets for different platforms. You can download the wallets or access the web wallets below."]
                </p>
                <p class="m3"><a class="btneo t1" href="~/client" target="_blank">@Localizer["Go to client page"]</a></p>
                <p class="home-down-tab m3">
                    <a class="iconfont" title="@Localizer["Mobile"]" href="~/client#1" target="_blank">&#xe64b;</a>
                    <a class="iconfont" title="@Localizer["Desktop"]" href="~/client#2" target="_blank">&#xe632;</a>
                    <a class="iconfont" title="@Localizer["Web"]" href="~/client#3" target="_blank">&#xe63c;</a>
                    <a class="iconfont" title="@Localizer["Hardware"]" href="~/client#4" target="_blank">&#xe688;</a>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="home-page-content home-deve">
    <h1 class="m1 text-white">@Localizer["NEO's vision of the Future?"]</h1>
    <div class="home-neo-intro">
        <div class="home-detail zindex">
            <div class="detail-text">
                <h1 class="m2">@Localizer["Digital Assets"]</h1>
                <p class="t2 m2">@Localizer["Digital Assets are programmable assets that exist in the form of electronic data. With blockchain technology, the digitization of assets can be decentralized, trustful, traceable, highly transparent, and free of intermediaries. On the NEO blockchain, users are able to register, trade, and circulate multiple types of assets. Proving the connection between digital and physical assets is possible through digital identity. Assets registered through a validated digital identity are protected by law."]</p>
            </div>
            <div class="detail-img m2 p2"><img src="@Helper.CDN/images/home-intro-2.png" /></div>
        </div>
        <div class="home-detail zindex">
            <div class="detail-img m2 p2 d-none d-sm-inline-block"><img src="@Helper.CDN/images/home-intro-1.png" /></div>
            <div class="detail-text">
                <h1 class="m2">@Localizer["Digital Identity"]</h1>
                <p class="t2 m2">@Localizer["Digital identity refers to the identity information of individuals, organizations, and other entities that exist in electronic form. The more mature digital identity system is based on the PKI (Public Key Infrastructure) X.509 standard. In NEO, we will implement a set of X.509 compatible digital identity standards. This set of digital identity standards, in addition to a compatible X.509 level certificate issuance model, will also support the Web Of Trust point-to-point certificate issuance model."]</p>
            </div>
            <div class="detail-img m2 p2 d-inline-block d-sm-none"><img src="@Helper.CDN/images/home-intro-1.png" /></div>
        </div>
        <div class="home-detail zindex">
            <div class="detail-text">
                <h1 class="m2">@Localizer["Smart Contract"]</h1>
                <p class="t2 m2">@Localizer["The NeoContract smart contract system is the biggest feature of the seamless integration of the existing developer ecosystem. Developers do not need to learn a new programming language, but can use C#, Java and other mainstream programming languages in their familiar IDE environments (Visual Studio, Eclipse, etc.) for smart contract development, debugging and compilation. NEO's Universal Lightweight Virtual Machine, NeoVM, has the advantages of high certainty, high concurrency, and high scalability. The NeoContract smart contract system will allow millions of developers around the world to quickly carry out the development of smart contracts. NeoContract will have a separate white paper describing the implementation details."]</p>
            </div>
            <div class="detail-img m2 p2"><img src="@Helper.CDN/images/home-intro-3.png" /></div>
        </div>
        <div class="home-detail zindex home-developer ">
            <div class="container m1 p1">
                <div class="row">
                    <div class="col-sm-6"></div>
                    <div class="col-sm-6">
                        <h1 class="m2">@Localizer["If you are a developer"]</h1>
                        <p class="t1 m2">@Localizer["Participate in our project, get NEO and GAS for development testing, or view our technical documentation"]</p>
                        <a class="btneo t1" href="~/testnet">@Localizer["Go to developer page"]</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="scroll-page">
            <div class="home-scroll" data-100-top="margin-left:0px;" data-bottom="margin-left:50px;">
                <img src="@Helper.CDN/images/home-scroll-1.png" />
            </div>
            <div class="home-scroll" data-100-top="margin-top:0px;" data-bottom="margin-top:100px;">
                <img src="@Helper.CDN/images/home-scroll-2.png" />
            </div>
            <div class="home-scroll" data-100-top="margin-top:0px;" data-bottom="margin-top:50px;">
                <img src="@Helper.CDN/images/home-scroll-3.png" />
            </div>
            <div class="home-scroll" data-100-top="margin-top:0px;" data-bottom="margin-top:100px;">
                <img src="@Helper.CDN/images/home-scroll-4.png" />
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="@Helper.CDN/lib/wow/wow.min.js"></script>
    <script src="@Helper.CDN/js/skrollr.min.js"></script>

    <script>
        window.onload = function () {
            pageSize();
            navColor();
            new WOW().init();

            if (!/Mobile|Windows Phone|Lumia|Android|webOS|iPhone|iPod|Blackberry|PlayBook|BB10|Opera Mini|\bCrMo\/|Opera Mobi/i.test(navigator.userAgent)) {
                skrollr.init({
                    edgeStrategy: 'set',
                    easing: {
                        WTF: Math.random,
                        inverted: function (p) {
                            return 1 - p;
                        }
                    }
                });
            }

            $(".load-page").hide();
            //兼容IE调整
            $("body").css("height", "auto");
        }

        $(window).resize(function () {
            pageSize();
        });
        $(document).scroll(function () { navColor() });
        

        function pageSize() {
            $("#homeFri").each(function () {
                $(this).css("width", $(window).width());
                $(this).css("min-height", $(window).height());
            })
        }
        $("#menu_list a").css("border-bottom", "none")
        $("#menu_list li.nav-item [href='/']").css("border-bottom", "2px solid #58bf00")

        function navColor() {
            var scrnum = $(document).scrollTop();
            var $nav = $(".navbar");
            if (scrnum <= 100) {
                $nav.removeAttr('style');
            } else {
                $nav.css("background", "rgba(228,228,228,0.95)")
            }
        }
    </script>
}
