@model List<DiscoverViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@section Styles{
    <style>
        .layout-container {
            max-width: none;
            padding: 0;
            margin: 0;
        }

        #homeFri .container {
            position: absolute;
            top: 50%;
            margin-top: -138px;
            right: 0; 
            left: 0;
        }
        body {
            overflow: hidden;
        }
        #loading {
            position: fixed;
            top: 69px;
            height: calc(100% - 69px);
            width: 100%;
            background: url('@Helper.ToCDN("/images/home/3 year visual-DT.svg", true)'), #f9fafa;
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            z-index: 1000;
        }
        #process-bar {
            position: fixed;
            top: 0;
            height: 2px;
            background-color: #00af92;
            width: 0;
            transition: width ease 5s;
            z-index: 1000;
        }
        @@media only screen and (max-width: 767px) {
            #loading {
                background: url('@Helper.ToCDN("/images/home/3 year visual-MB.svg", true)'), #f9fafa;
                background-size: contain;
                background-repeat: no-repeat;
                background-position: center;
            }
        }
    </style>
}
<div id="process-bar"></div>
<div id="loading"></div>
@* 基本块 - Home page *@
<div id="homeFri" class="bg8 p1">
    <div class="container">
        <h3>
            @Localizer["Join the"]<br />
            <span class="h1 typetext" id="typetext"></span><br />
            @Localizer["open network for the smart economy"]
        </h3>
        <div class="mt4">
            <a asp-controller="about" asp-action="index" class="btn">@Localizer["Learn more"]</a>
        </div>
    </div>
</div>
<div class="b3">
    <div class="container p2">
        <div class="row">
            <div class="col-md-6 text-center text-md-left">
                <h2>@Localizer["Become a Neo developer"]</h2>
            </div>
            <div class="col-md-6 text-center text-md-left">
                <p class="mt6">@Localizer["As the most developer friendly platform, Neo is supporting a global dApp ecosystem with its comprehensive suite of tools and resources to empower anyone from anywhere in the world to join Neo’s vision of a smart economy."]</p>
                <a asp-controller="dev" asp-action="index" class="btn mt4">@Localizer["Get started"]</a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row list3">
            <div class="col-lg-4">
                <span class="green">
                    @Localizer["Mainstream Languages"]
                </span>
                <ul class="list-ul row">
                    <li class="col-4 col-lg-12 text-right text-lg-left">C#</li>
                    <li class="col-4 col-lg-12 text-center text-lg-left">Python</li>
                    <li class="col-4 col-lg-12 text-left">Java</li>
                    <li class="col-7 col-lg-12 text-right text-lg-left">JavaScript</li>
                    <li class="col-2 col-lg-12 text-center text-lg-left">Go</li>
                </ul>
            </div>
            <div class="col-lg-5">
                <span class="green">@Localizer["Highly Active Network"]</span>
                <ul class="list-ul list-inline row">
                    <li class="col-6 col-lg-12">2,000,000+<span>@Localizer["Wallet Addresses"]</span></li>
                    <li class="col-6 col-lg-12">500,000+<span>@Localizer["Community Members"]</span></li>
                    <li class="col-6 col-sm-6 col-lg-4">100+<span>dApps</span></li>
                    <li class="col-6 col-sm-6 col-lg-8">300+<span>@Localizer["Technical Contributors"]</span></li>
                </ul>
            </div>
            <div class="col-lg-3">
                <span class="green">@Localizer["Global Neo Communities"]</span>
                <ul class="list-ul list-inline row">
                    <li class="col-4 col-lg-6">20<span>@Localizer["Cities"]</span></li>
                    <li class="col-4 col-lg-6">7<span>@Localizer["Countries"]</span></li>
                    <li class="col-4 col-lg-6">10+<span>@Localizer["Communities"]</span></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="module mt3 p3">
        <h2 class="module-text">@Localizer["Neo Ecosystem"]</h2>
        <img class="module-img" data-original="@Helper.ToCDN("/images/ecosystem/Ecosystem.svg")" />
        <div class="module-text">
            <p class="mt5">@Localizer["With thriving partners and projects, the Neo ecosystem is rapidly growing and developing, thus enabling Neo to become the foundation for next-gen Internet."]</p>
            <p class="mt4"><a asp-controller="eco" asp-action="index" class="btn">@Localizer["Learn more"]</a></p>
        </div>
    </div>
</div>

<div class="module1 bg1">
    <div class="container p2">
        <div class="row">
            <div class="col-md-5"></div>
            <div class="col-md-7">
                <h2>@Localizer["Join EcoBoost program and power up for success"]</h2>
                <p class="mt5">@Localizer["Neo is investing USD $100 million through its  EcoBoost program to accelerate the realization of large-scale commercial blockchain solutions by empowering developers and projects in the ecosystem."]</p>
                <p class="mt4"><a asp-controller="ecoboost" asp-action="index" class="btn1">@Localizer["Learn more"]</a></p>
            </div>
        </div>
    </div>
</div>
<div class="b5 p1">
    <div class="container">
        <div class="module mt0">
            <img class="module-img" data-original="@Helper.ToCDN("/images/home/GetWallet.svg")" />
            <div class="module-text">
                <h2>@Localizer["Get a NEO Wallet today, and take control of your assets!"]</h2>
                <p class="mt4"><a asp-controller="wallets" asp-action="index" class="btn">@Localizer["Get wallet"]</a></p>
            </div>
        </div>
    </div>
</div>

<div class="container mt1">
    <h2>@Localizer["Discover"]<a asp-controller="discover" asp-action="index" class="btn2">@Localizer["View more"]</a></h2>
    <div class="row list2">
        @{await Html.RenderPartialAsync("../Discover/_DiscoverPartial", Model);}
    </div>
</div>
<div class="mt1"></div>

@section Scripts{
    <script src="@Helper.ToCDN("/lib/typed.js/typed.min.js")"></script>
    @if (SharedLocalizer["en"].Value == "zh")
    {
        <script>
            var typed = new Typed('#typetext', {
            strings: ["@Localizer["community-driven"]","@Localizer["developer-friendly"]","@Localizer["enterprise-ready"]"],
            typeSpeed: 80,
            startDelay: 300,
            backDelay: 1500,
            backSpeed: 40,
            loop: true
        });
        </script>
    }
    else
    {
        <script>
            var typed = new Typed('#typetext', {
            strings: ["@Localizer["community-driven"]","@Localizer["developer-friendly"]","@Localizer["enterprise-ready"]"],
            typeSpeed: 40,
            startDelay: 300,
            backDelay: 1500,
            backSpeed: 20,
            loop: true
        });
        </script>
    }
}

