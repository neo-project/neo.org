@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="/css/homepage.css" asp-append-version="true" />
        <link rel="stylesheet" href="/lib/animate.css/animate.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="@Helper.ToCDN("/css/homepage.min.css", true)" />
        <link href="@Helper.ToCDN("/lib/animate.css/animate.min.css")" rel="stylesheet" />
    </environment>
    <link href="@Helper.ToCDN("/lib/Swiper/css/swiper.min.css")" rel="stylesheet" />
}

@* 基本块 - Home page *@
<div class="home-page-content" id="homeFri">
    <div class="row">
        <div class="midpoint home-text-fir">
            <h1><span class="back-static p3">NEO</span></h1>
            <h3 class="m3"><span class="back-static p3 lh3 green-text">@Localizer["NEO - An Open Network For Smart Economy"]</span></h3>
        </div>
    </div>
</div>

<div class="home-page-content home-intro">
    <div class="container">
        <div class="row">
            <div class="col-md-6"><img class="img-neo m2" src='/images/home-intro-2.svg' /></div>
            <div class="col-md-6">
                <h2 class="m1">@Localizer["What is NEO"]</h2>
                <div class="m2 t3 text-left">
                    @Localizer["NEO is an open source project driven by the community. It utilizes blockchain technology and digital identities to digitize assets and automate the management of digital assets using smart contracts. Using a distributed network, it aims to create a \"Smart Economy\"."]<br />
                    @Localizer["NEO was founded in 2014 and open sourced on GitHub in June 2015. Its MainNet was released in October 2016 and has been running in stable capacity for two years. Its vision of a \"smart economy\" was set up along with the project rebranding in 2017."]
                </div>
            </div>
        </div>
    </div>
    <div class="intro-img m1">
        @Localizer["<img  data-original='/images/home-intro-3.svg'/>"]
    </div>
    <div class="container">
        <div class="swiper-container text-center m2 p4 t4">
            <div class="swiper-wrapper gray-text m2">
                <div class="swiper-slide p3 wow bounceInUp" data-wow-duration="0.5s" data-wow-delay="0.1s">
                    <img src="@Helper.ToCDN("/images/coin.svg")" /><br />
                    <strong>@Localizer["Digital Assets"]</strong><br />
                    @Localizer["The underlying infrastructure of NEO supports multiple types of digital assets. Users can register, transfer and trade assets at their own discretion on NEO."]
                </div>
                <div class="swiper-slide p3 wow bounceInUp" data-wow-duration="0.5s" data-wow-delay="0.2s">
                    <img src="@Helper.ToCDN("/images/bank.svg")" /><br />
                    <strong>@Localizer["Digital Certificate"]</strong><br />
                    @Localizer["Digital certificates are supported to build trust into the public chain. This provides full legal protection for all assets digitized through the NEO platform."]
                </div>
                <div class="swiper-slide p3 wow bounceInUp" data-wow-duration="0.5s" data-wow-delay="0.3s">
                    <img src="@Helper.ToCDN("/images/networking.svg")" /><br />
                    <strong>@Localizer["Transaction Mechanism"]</strong><br />
                    @Localizer["Facilitate P2P trustless exchange of digital assets. Buyers and sellers of digital assets and currencies will be matched peer-to-peer without the need for third party exchanges."]
                </div>
                <div class="swiper-slide p3 wow bounceInUp" data-wow-duration="0.5s" data-wow-delay="0.4s">
                    <img src="@Helper.ToCDN("/images/contract.svg")" /><br />
                    <strong>@Localizer["Smart Contract"]</strong><br />
                    @Localizer["Turing-complete smart contract, which has high certainty and finality, support concurrent operation, sharding and unlimited scalability when running in NeoVM."]
                </div>
                <div class="swiper-slide p3">
                    <img src="@Helper.ToCDN("/images/startup.svg")" /><br />
                    <strong>@Localizer["Multi-language Development"]</strong><br />
                    @Localizer["NeoContract supports multiple programming languages such as C#, Java, and Python. Developers can rapidly develop smart contracts based on the NEO platform without learning a unique language."]
                </div>
                <div class="swiper-slide p3">
                    <img src="@Helper.ToCDN("/images/think.svg")" /><br />
                    <strong>NEO VM</strong><br />
                    @Localizer["Neo Virtual Machine (NeoVM) - NEO's lightweight stack-based virtual machine provides shorter startup times with efficient execution. Deterministic calling tree-technology allows NEO to achieve theoretically unlimited scalability."]
                </div>
                <div class="swiper-slide p3">
                    <img src="@Helper.ToCDN("/images/teamwork.svg")" /><br />
                    <strong>dBFT</strong><br />
                    @Localizer["Consensus nodes use Byzantine Fault Tolerance Algorithm to reach consensus and ensure the finality of transactions. It also ensures that the system keeps its finality and availability as long as Byzantine fault occurs on less than 1/3 of the nodes."]
                </div>
                <div class="swiper-slide p3">
                    <img src="@Helper.ToCDN("/images/networking2.svg")" /><br />
                    <strong>@Localizer["Cross-chain Interoperability Protocol"]</strong><br />
                    @Localizer["Comprises Cross-chain Assets Swap Protocol and Cross-chain Distributed Transaction Protocol and can achieve atomic assets swap and guarantee the operation consistency of smart contracts executed on different chains."]
                </div>
                <div class="swiper-slide p3">
                    <img src="@Helper.ToCDN("/images/flask.svg")" /><br />
                    <strong>@Localizer["Anti-quantum Crisis"]</strong><br />
                    @Localizer["Introduced Lattice cryptography-based signing and encryption technique to avoid quantum crisis by Turing encryption and decryption problem into the Shortest Vector Problem (SVP), which cannot be solved by current quantum computers."]
                </div>
            </div>
            <div class="swiper-pagination"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
    </div>
</div>

<div class="home-page-content home-client">
    <div class="container home-detail">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6 p2">
                <h2 class="m2">@Localizer["NEO Client"]</h2>
                <p class="t3 m3 back-white">
                    @Localizer["The NEO Team and community have created various wallets for different platforms. You can download the wallets or access the web wallets below."]
                </p>
                <p class="m3"><a class="btn-static btn1 t3" href="~/client" target="_blank">@Localizer["Go to client page"]</a></p>
                <p class="home-down-tab m3">
                    <a class="p4" title="@Localizer["Desktop"]" href="~/client#1desktop" target="_blank"><img src="@Helper.ToCDN("/images/desktop.svg")" /></a>
                    <a class="p4" title="@Localizer["Mobile"]" href="~/client#2mobile" target="_blank"><img src="@Helper.ToCDN("/images/mobile.svg")" /></a>
                    <a class="p4" title="@Localizer["Web"]" href="~/client#3web" target="_blank"><img src="@Helper.ToCDN("/images/web.svg")" /></a>
                    <a class="p4" title="@Localizer["Hardware"]" href="~/client#4hardware" target="_blank"><img src="@Helper.ToCDN("/images/hardware.svg")" /></a>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="home-page-content home-deve text-white">
    <div class="container p1">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="m2">@Localizer["If you are a developer"]</h2>
                <p class="t3 m3 w600">@Localizer["NeoContract supports multiple programming languages such as C#, Java, and Python. Developers can rapidly develop smart contracts based on the NEO platform without learning a unique language."]</p>
                <ul class="t3 m3 pl0">
                    <li><a class="text-white" href="https://github.com/neo-project" target="_blank">@Localizer["Join our project"]</a></li>
                    <li><a class="text-white" href="http://docs.neo.org/" target="_blank">@Localizer["View technical docs"]</a></li>
                    <li><a class="text-white" href="/dev#testcoin" target="_blank">@Localizer["Claim NEO/GAS for TestNet use"]</a></li>
                    <li><a class="text-white" href="/dev/bounty" target="_blank">@Localizer["Participate in NEO Bounty Program"]</a></li>
                </ul>
                <a class="btn-static btn2 t3 m3" href="~/dev">@Localizer["Go to developer page"]</a>
            </div>
        </div>
    </div>
</div>

<div class="home-page-content back-color home-blog-event">
    <div class="container home-detail zindex">
        <h2 class="m1">@Localizer["Blog & Event"]</h2>
        <div class="row text-left m2">
            <div class="col-md-6 m2">
                @if (ViewBag.Blog != null)
                {
                    foreach (var item in ViewBag.Blog as IEnumerable<NeoWeb.Models.Blog>)
                    {
                        <div class="blog-con border-static back-white m3 mb0 p3">
                            <p class="bolder-font mb0 t3 text-ellipsis"><a href="/blog/details/@item.Id">@item.Title</a></p>
                            <p class="m4 mb0 t4 gray-text">@item.Summary.Substring(0, Math.Min(item.Summary.Length, 100))…</p>
                            <p class="m4 mb0"><img src="@Helper.ToCDN("/images/event/time.svg")" /> @item.EditTime.ToString()</p>
                        </div>
                    }
                }
                <p class="m3 mb0 text-center"><a class="btn-static t3" href="~/blog">@Localizer["Blog Page"]</a></p>
            </div>
            <div class="col-md-6 m2 event-con">
                @if (ViewBag.Event != null)
                {
                    foreach (var item in ViewBag.Event as IEnumerable<NeoWeb.Models.Event>)
                    {
                        <div class="border-static back-white m3 p3">
                            @if (string.IsNullOrEmpty(item.Cover))
                            {
                                <p class="m4 mb0"><img src="@String.Format(Helper.CDN + "/images/event/twitter-{0}.jpg", item.Type).ToLower()" width="100%" /></p>
                            }
                            else
                            {
                                <p class="m4 mb0"><img src="@String.Format("/upload/{0}", item.Cover).ToLower()" width="100%" /></p>
                            }
                            <p class="m4 mb0 bolder-font t3 text-ellipsis">@item.Name</p>
                            <p class="m4 mb0 t4 lh3 gray-text">
                                <img src="@Helper.ToCDN("/images/event/time.svg")" /> @item.StartTime.ToString() ~ @item.EndTime.ToString()<br />
                                <img src="@Helper.ToCDN("/images/event/addr.svg")" /> @item.Country?.ZhName - @item.City<br />
                                <img src="@Helper.ToCDN("/images/event/organizers.svg")" /> Organizers: @item.Organizers<br />
                            </p>
                            <a class="btn-static btn3 m3" href="/event/details/@item.Id">@Localizer["Detail"]</a>
                        </div>
                    }
                }
                <p class="m3 text-center"><a class="btn-static t3" href="~/event">@Localizer["Event Page"]</a></p>
            </div>
        </div>
    </div>

    <div class="container home-comm">
        <h2 class="m1 p1">@Localizer["Community"]</h2>
        <ul class="comm-ul">
            <li class="p3"><a target="_blank" title="City of Zion" href="https://cityofzion.io/"><img src="@Helper.ToCDN("/images/community/coz.png")" /></a></li>
            <li class="p3"><a target="_blank" title="NewEconoLabs 新经济实验室" href="https://nel.group/"><img src="@Helper.ToCDN("/images/community/nel.png")" /></a></li>
            <li class="p3"><a target="_blank" title="NEO News Today" href="https://neonewstoday.com/"><img src="@Helper.ToCDN("/images/community/nnt.png")" /></a></li>
            <li class="p3"><a target="_blank" title="NEO Research" href="https://neoresearch.io/"><img src="@Helper.ToCDN("/images/community/neor.png")" /></a></li>
            @*<li class="p3 d-none"><a target="_blank" title="NEO-ONE" href="https://neo-one.io/"><img src="@Helper.ToCDN("/images/community/neoone.png")" /></a></li>*@
            <li class="p3"><a target="_blank" title="NEOFANS" href="http://neofans.org/"><img src="@Helper.ToCDN("/images/community/neofans.png")" /></a></li>
            @*<li class="p3"><a target="_blank" title="NEO Beginner" href="https://www.neonbeginner.com/"><img src="@Helper.ToCDN("/images/community/neob.png")" /></a></li>*@
        </ul>
    </div>
</div>

@section Scripts{
    <script src="@Helper.ToCDN("/lib/wow/wow.min.js")"></script>
    <script src="@Helper.ToCDN("/js/skrollr.min.js")"></script>
    <script src="@Helper.ToCDN("/lib/Swiper/js/swiper.min.js")"></script>
    <script>
        var swiper = new Swiper('.swiper-container', {
            slidesPerView: 3,
            spaceBetween: 10,
            slidesPerGroup: 3,
            loop: true,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: {
                el: '.swiper-pagination',
                dynamicBullets: true,
                clickable: true,
            },
            breakpoints: {
                1024: {
                    slidesPerView: 3,
                    spaceBetween: 10,
                },
                768: {
                    slidesPerView: 2,
                    spaceBetween: 10,
                    slidesPerGroup: 2,
                },
                480: {
                    slidesPerView: 1,
                    spaceBetween: 10,
                    slidesPerGroup: 1,
                }
            }
        });
    </script>
    <script>
        window.onload = function () {
            pageSize();
            new WOW().init();

            if (!/Mobile|Windows Phone|Lumia|Android|webOS|iPhone|iPod|Blackberry|PlayBook|BB10|Opera Mini|\bCrMo\/|Opera Mobi/i.test(navigator.userAgent)) {
                skrollr.init({
                    edgeStrategy: 'set',
                    easing: {
                        WTF: Math.random,
                        inverted: function (p) {
                            return 1 - p;
                        }
                    }
                });
            }
            //兼容IE调整
            $("body").css("height", "auto");
        }

        $(window).resize(function () {
            pageSize();
        });
        
        function pageSize() {
            $("#homeFri").each(function () {
                $(this).css("width", $(window).width());
                $(this).css("min-height", $(window).height());
            })
        }
        $("#menu_list a").css("border-bottom", "none")
        $("#menu_list li.nav-item [href='/']").css("border-bottom", "2px solid #58bf00")

    </script>
    <script src="@Helper.ToCDN("/js/jquery.lazyload.min.js")"></script>
    <script>
        $('[data-original]').lazyload({
            threshold: 200,
            effect: "fadeIn"
        });
    </script>
}
