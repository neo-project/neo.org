@model NeoWeb.Models.Blog

@{
    ViewData["Title"] = "Delete Blog";
}
<p class="mt-4">Are you sure you want to delete this?</p>
<p class="mt5 w600">@Html.DisplayFor(model => model.ChineseTitle)</p>
<p class="mt5 w600">@Html.DisplayFor(model => model.EnglishTitle)</p>
<div class="mt5">
    <div class="mt-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="my-4">
                <input type="submit" value="Delete" class="btn mt5" />
            </div>
            <div class="my-4">
                <a asp-action="index" asp-controller="discover">Back to List</a>
            </div>
        </form>
    </div>
</div>
