@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Styles{
    @RenderSection("Styles", required: false)
}
<div class="container">
    @RenderBody()
    <div class="row">
        <div class="col-lg-11 col-lg-push-1">
            @await Html.PartialAsync("_LoginPartial")
        </div>
    </div>
</div>

@section Scripts{
    @RenderSection("Scripts", required: false)
    <script>
            $("#menu_list a").css("border-bottom", "none")
            $("#menu_list li.nav-item [href='/blog']").css("border-bottom", "2px solid #58bf00")
    </script>
}