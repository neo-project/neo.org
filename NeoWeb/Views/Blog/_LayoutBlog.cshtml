@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Styles{
    @RenderSection("Styles", required: false)
}
@RenderBody()

@section Scripts{
    @RenderSection("Scripts", required: false)
    <script src="@Helper.ToCDN("/js/text-autospace.js")"></script>
    <script>
        $("#menu_list a").css("border-bottom", "none");
        $("#menu_list li.nav-item [href='/blog']").css("border-bottom", "2px solid #58bf00");
        text_replace(".with-space");
        $('[data-original]').lazyload({
            threshold: 200,
            effect: "fadeIn"
        });
        $(function () {
            $('.back-to-top').click(function (event) {
                $('html, body').animate({ scrollTop: 0 }, 500);
            });
            $("#blogDate").find("ul:first").show(300);
        });
    </script>
}