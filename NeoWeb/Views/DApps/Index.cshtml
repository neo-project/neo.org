            <p><a href="https://neotracker.io/contract/ecc6b20d3ccac1ee9ef109af5a7cdb85706b1df9" target="_blank">ecc6b20d3ccac1ee9ef109af5a7cdb85706b1df9</a></p>
        </div>
    </div>

</div>
@section Scripts{
    <script>
        $("#menu_list a").css("border-bottom", "none")
        $("#menu_list li.menu-item [href='/dapps']").css("border-bottom", "2px solid #58bf00")
    </script>
}
