@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "dApps";
}
@section Styles{
    <link href="~/css/dapps.min.css" rel="stylesheet" />
}
<div class="container body-content">
    <h2 class="m2">@Localizer["NEO Quality dApp Recommendation"]</h2>
    <div class="m2">
        <a class="btneo t2" target="_blank" href="https://github.com/neo-project/neo.org/tree/develop/NeoWeb/Views/DApps">@Localizer["Add dApp"]</a>
