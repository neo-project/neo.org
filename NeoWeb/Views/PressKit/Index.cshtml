@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Press Kit"].Value;
}
@section Styles{
    <style>
        .img-logo {
            display: block;
            width: 480px;
            background-color: #fff;
        }
            .img-logo div {
                background-color: #fff;
                width: 100%;
                height: 65px;
                padding: 20px 30px;
                color: #242424;
            }
            .img-logo:hover .iconfont {
                color: #00af92
            }
                .img-logo div strong {
                    margin-right: 8px;
                }
        .img-logo:hover {
            background-color: #fafafa;
            box-shadow: rgba(0, 0, 0, .1) 0 0 8px;
        }
    </style>
}
<div class="py-5">
    <p class="mt-4">@Localizer["Neo's branding is a graphical representation of Neo's vision and identity."]</p>
    <div class="mt-5 row">
        <div class="mt-3 mt-md-0 col-12 col-md-5">
            <h4>@Localizer["Neo: The platform"]</h4>
            <p>@Localizer["\"Neo\" represents the brand and the platform."]</p>
        </div>
        <div class="mt-3 mt-md-0 col-12 col-md-6 offset-md-1">
            <a class="img-logo img-fluid" href="@Helper.ToCDN("/images/presskit/Neo Brand Book_v1.0_20191017.pdf")">
                <img class="img-fluid" data-original="@Helper.CDN/images/presskit/img1.png" />
                <div>
                    <strong>Neo Brandbook</strong> <i class="iconfont">&#xe602;</i>
                </div>
            </a>
        </div>
    </div>
    <div class="mt-5 row">
        <div class="mt-3 mt-md-0 col-12 col-md-5">
            <h4>@Localizer["The Logo"]</h4>
            <p>@Localizer["The horizontal lockup shall be used in most circumstances. The vertical lockup and the Neo doorway symbol shall only be used for constrained spaces."]</p>
        </div>
        <div class="mt-3 mt-md-0 col-12 col-md-6 offset-md-1">
            <a class="img-logo img-fluid" href="@Helper.ToCDN("/images/presskit/Neo logo.zip")">
                <img class="img-fluid" data-original="@Helper.CDN/images/presskit/img2.png" />
                <div>
                    <strong>Neo Logo</strong> <i class="iconfont">&#xe602;</i>
                </div>
            </a>
        </div>
    </div>
    <div class="mt-5 row">
        <div class="mt-3 mt-md-0 col-12 col-md-5">
            <h4>@Localizer["The NEO token"]</h4>
            <p>@Localizer["\"NEO\" represents the governance token on the Neo blockchain."]</p>
        </div>
        <div class="mt-3 mt-md-0 col-12 col-md-6 offset-md-1">
            <a class="img-logo img-fluid" href="@Helper.ToCDN("/images/presskit/NEO icon.zip")">
                <img class="img-fluid" data-original="@Helper.CDN/images/presskit/img3.png" />
                <div>
                    <strong>NEO Icon</strong> <i class="iconfont">&#xe602;</i>
                </div>
            </a>
        </div>
    </div>
    <div class="mt-5 row">
        <div class="mt-3 mt-md-0 col-12 col-md-5">
            <h4>@Localizer["The GAS token"] </h4>
            <p>@Localizer["\"GAS\" represents the utility token on the Neo blockchain."]</p>
        </div>
        <div class="mt-3 mt-md-0 col-12 col-md-6 offset-md-1">
            <a class="img-logo img-fluid" href="@Helper.ToCDN("/images/presskit/GAS icon.zip")">
                <img class="img-fluid" data-original="@Helper.CDN/images/presskit/img4.png" />
                <div>
                    <strong>GAS Icon</strong> <i class="iconfont">&#xe602;</i>
                </div>
            </a>
        </div>
    </div>
    <div class="mt-5 row">
    </div>
</div>

