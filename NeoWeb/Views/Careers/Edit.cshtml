@model NeoWeb.Models.Careers

@{
    ViewData["Title"] = "Edit Careers";
}
<h2 class="m2">Edit Careers</h2>
<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Title" class="col-form-label">职位名称</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Type" class="col-form-label">招聘部门</label>
            <select asp-for="Type" class="form-control">
                <option value="0">R&D</option>
                <option value="1">Marketing</option>
                <option value="2">Ecosystem</option>
                <option value="3">HR</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="IsShow" class="col-form-label">状态</label>
            <div>
                <label>
                    <input asp-for="IsShow" /> 显示
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-form-label">职位描述</label>
        <textarea name="Description" class="form-control" autocomplete="off" rows=15>@Model.Description.Replace("<br/>", "\r\n")</textarea>
    </div>

    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-secondary" />
    </div>
</form>
<div>
    <a asp-action="index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}