@model IEnumerable<NeoWeb.Models.Job>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = "Index";
}
@section Styles{
    <link rel="stylesheet" href="@Helper.ToCDN("/css/careers.min.css", true)" />
}
<div id="homeFri" class="bg9 p1">
    <div class="container">
        <h1 class="w1000">@Localizer["Join Us"]</h1>
        <p class="mt5 w600">@Localizer["We are calling for you to join us in in the journey towards the smart economy. Please check this page for regular updates of vacancies from various teams and functions."]</p>
        <div class="mt1 text-center">
            @foreach (var item in SharedLocalizer["en"].Value == "zh" ? ViewBag.ChineseGroup : ViewBag.EnglishGroup)
            {
                <a class="btn-focus">@item</a>
            }
        </div>
    </div>
    <div class="container w700 text-left mt3">
        @foreach (var item in Model)
        {
            <div class="mt4">
                <h4 class="title"><a onclick="show(this)" href="#@item.Number">@(SharedLocalizer["en"].Value == "zh" ? @item.ChineseTitle : @item.EnglishTitle)</a></h4>
                <div id="@item.Number" style="display: none">
                    <div class="mt4">@Html.Raw(SharedLocalizer["en"].Value == "zh" ? @item.ChineseContent : @item.ChineseContent)</div>

                    @if (ViewBag.UserRules != null && ViewBag.UserRules)
                    {
                    <div class="mt5">
                        <a asp-action="Edit" asp-controller="Careers" asp-route-id="@item.Id">Edit</a>
                        <a class="ml-2" asp-action="Delete" asp-controller="Careers" asp-route-id="@item.Id">Delete</a>
                    </div>
                    }
                    <div class="text-right">
                        <span class="careers-qrcode mr2">
                            <a href="javascript:" class="iconfont">&#xe615;</a>
                            <img src="@Helper.CDN/images/careers/qr.png" />
                        </span>
                        <a class="btn" href="mailto:career@neo.org?subject=@item.Number">@Localizer["Apply Now"]</a>
                        <div class="mt6 gray">
                            @Localizer["Scan the QR code and talk to us!"]
                        </div>
                    </div>
                </div>
            </div>
            <hr class="mt4" />
        }
    </div>
</div>
<div class="b5 p1">
    <div class="container text-center">
        <h2>@Localizer["What we will provide you"]</h2>
        <div class="row list1 mt5">
            <div class="col-md-4">
                <img data-original="@Helper.ToCDN("/images/careers/1.svg")" />
                <div>
                    <div class="list-title">@Localizer["Innovative Ideas"]</div>
                </div>
            </div>
            <div class="col-md-4">
                <img data-original="@Helper.ToCDN("/images/careers/2.svg")" />
                <div>
                    <div class="list-title">@Localizer["Exciting Challenges"]</div>
                </div>
            </div>
            <div class="col-md-4">
                <img data-original="@Helper.ToCDN("/images/careers/3.svg")" />
                <div>
                    <div class="list-title">@Localizer["Open Discussions"]</div>
                </div>
            </div>
            <div class="col-md-4">
                <img data-original="@Helper.ToCDN("/images/careers/4.svg")" />
                <div>
                    <div class="list-title">@Localizer["Collaborative Teammates"]</div>
                </div>
            </div>
            <div class="col-md-4">
                <img data-original="@Helper.ToCDN("/images/careers/5.svg")" />
                <div>
                    <div class="list-title">@Localizer["Flat Organizational"]</div>
                </div>
            </div>
            <div class="col-md-4">
                <img data-original="@Helper.ToCDN("/images/careers/6.svg")" />
                <div>
                    <div class="list-title">@Localizer["Diversified Culture"]</div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        function show(obj) {
            $(obj).parent().next().toggle();
        }
        $(window.location.hash).show();
    </script>
}