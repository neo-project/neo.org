@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Eco";
}
@section Styles{
    <link rel="stylesheet" href="@Helper.ToCDN("/css/eco.min.css", true)" />
}

<div class="banner">
    <div class="container module p1 pt0">
        <img class="module-img" data-original="/images/ecosystem/Ecosystem.svg" />
        <div class="module-text">
            <h1>@Localizer["Neo<br />Ecosystem"]</h1>
            <p class="mt5">@Localizer["With our thriving partners and projects, the Neo ecosystem is rapidly growing and developing, thus enabling us to become the foundation for next-gen Internet."]</p>
        </div>
    </div>
</div>

<div class="module1 bg1">
    <div class="container p2">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <h2>@Localizer["Join EcoBoost program and power up for success"]</h2>
                <p class="mt5">@Localizer["Neo is investing USD $100 million through its EcoBoost initiative to accelerate the realization of large-scale commercial blockchain solutions by empowering our developers and projects."]</p>
                <p class="mt4"><a class="btn1" asp-controller="ecoboost" asp-action="index">@Localizer["Learn more"]</a></p>
            </div>
        </div>
    </div>
</div>

<div class="container eco">
    <div class="module1 left">
        <h3 class="module-text">@Localizer["Global Neo<br />Community"]</h3>
        <img class="module-img" data-original="/images/ecosystem/NeoCommunity.svg" />
        <div class="module-text">
            <p class="h4">
                <span class="tag">@Localizer["20<span>cities</span>"]</span>
                <span class="tag">@Localizer["7<span>countries</span>"]</span>
            </p>
            <p>@Localizer["Neo has five full-time developer communities across the globe focusing on building Neo infrastructure and lowering the barrier to entry to Neo development.<br />Neo is a key market influencer with more than 500,000 followers over international social media channels.<br />Neo has over 2,000,000 registered wallet address, demonstrating the high availability of the NEO token."]</p>
            <p><a class="btn" asp-controller="dev" asp-action="index" asp-fragment="involved">@Localizer["Learn more"]</a></p>
        </div>
    </div>

    <div class="module1">
        <h3 class="module-text">@Localizer["dApp Platform"]</h3>
        <img class="module-img" data-original="/images/ecosystem/dAppPlatform.svg" />
        <div class="module-text">
            <p class="h4">
                <span class="tag">100 +<span>dapps</span></span>
            </p>
            <p>@Localizer["The blockchain of choice for developers, Neo's powerful infrastructure is powering over 100 dApps enabling real use cases for digital assets."]</p>
            <p><a class="btn" href="https://ndapp.org" target="_blank">@Localizer["Learn more"]</a></p>
        </div>
    </div>
    <div class="module1 left">
        <h3 class="module-text">@Localizer["Wallet"]</h3>
        <img class="module-img" data-original="/images/ecosystem/ClientInfrastructure.svg" />
        <div class="module-text">
            <p class="h4">
                <span class="tag">@Localizer["30 +<span>Wallets support</span>"]</span>
            </p>
            <p>@Localizer["Experience the smart economy of the future today! Download your wallet of choice for any device and any OS, and get started transfering and transacting with NEO assets!"]</p>
            <p><a class="btn" asp-controller="wallets" asp-action="index">@Localizer["Get wallet"]</a></p>
        </div>
    </div>
    <div class="module1">
        <h3 class="module-text">@Localizer["Developer Tool"]</h3>
        <img class="module-img" data-original="/images/ecosystem/DevTools.svg" />
        <div class="module-text">
            <p class="h4">
                <span class="tag">C#  Python  Java  JavaScript  Go</span>
            </p>
            <p>@Localizer["Have a cool idea in mind? We’re dedicated to bringing your ideas to life by offering the most comprehensive and developer-friendly toolkit, from smart contract development to dApp integration. Start building with us today!"]</p>
            <p><a class="btn" asp-controller="dev">@Localizer["Get started"]</a></p>
        </div>
    </div>
    <div class="module1 left">
        <h3 class="module-text">@Localizer["Neo Protocol"]</h3>
        <img class="module-img" data-original="/images/ecosystem/NeoProtocol.svg" />
        <div class="module-text">
            <p>@Localizer["The Neo MainNet has been steadily evolving across the 3 years since the launch in 2016. There will be major updates and renewals coming to the protocol layer in the Neo3 release, which will provide a more stable, higher-performance, more developer-friendly next-gen Internet infrastructure."]</p>
            <p><a class="btn" href="https://github.com/neo-project" target="_blank">GitHub</a></p>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        showEco();
        function showEco(str) {
            $("body").trigger("scroll");
            if (str) {
                var e = window.event || arguments.callee.caller.arguments[0];
                $(e.target).addClass("selected").siblings().removeClass("selected");
            }
            str = str ? str : "Liquidity";
            $('.eco-logo li').not('.' + str).hide();
            $('.' + str).show();
        }
        function showDialog() {
            $(".modal-body").html($("#ecoFormDiv").html());
            $('#EcoReg').modal('show');
        }
    </script>
}