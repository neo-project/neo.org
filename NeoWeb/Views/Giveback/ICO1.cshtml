@model NeoWeb.Models.ICO1
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "ICO1";
}
<div class="container">
    <h2 class="text-center">ICO1</h2>
    <br />
    <form asp-action="ICO1" id="form_ico1" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-4 col-form-label text-right">邮箱</label>
            <div class="col-md-4">
                <input asp-for="Email" class="form-control" data-val="true" data-val-required="请填写邮箱" data-val-email="不正确的邮箱地址">
                <small class="form-text text-muted">请填写微天使注册邮箱</small>
                <small><span asp-validation-for="Email" class="text-danger"></span></small>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RedeemCode" class="col-md-4 col-form-label text-right">兑换码</label>
            <div class="col-md-4">
                <input asp-for="RedeemCode" class="form-control" autocomplete="off" data-val="true" data-val-required="请填写兑换码" data-val-regex-pattern="\w{20}" data-val-regex="回馈计划的兑换码长度为20字符"/>
                <small class="form-text text-muted">兑换码请在微天使网站，个人中心，兑换码中查看</small>
                <small><span asp-validation-for="RedeemCode" class="text-danger"></span></small>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Choose" class="col-md-4 col-form-label text-right">以何种方式接受回馈</label>
            <div class="col-md-4">
                <select id="select1" asp-for="Choose" class="form-control" onchange="setChoose()">
                    <option value="0">人民币（CNY）</option>
                    <option value="1">NEO</option>
                </select>
                <small><span asp-validation-for="Choose" class="text-danger"></span></small>
            </div>
        </div>
        <div class="form-group row hidden-neo">
            <label asp-for="Name" class="col-md-4 col-form-label text-right">真实姓名</label>
            <div class="col-md-4">
                <input asp-for="Name" class="form-control" data-val="true" data-val-required="请填写真实姓名" data-val-minlength-min="2" data-val-minlength="长度至少是2个字符" data-val-maxlength-max="8" data-val-maxlength="长度不能超过8个字符"/>
                <small><span asp-validation-for="Name" class="text-danger"></span></small>
            </div>
        </div>
        <div class="form-group row hidden-neo">
            <label asp-for="BankAccount" class="col-md-4 col-form-label text-right">银行卡号</label>
            <div class="col-md-4">
                <input asp-for="BankAccount" class="form-control" data-val="true" data-val-digits="银行卡号必须是纯数字" data-val-required="请填写银行卡号" data-val-minlength-min="15" data-val-minlength="长度至少是15个字符" data-val-maxlength-max="19" data-val-maxlength="长度不能超过19个字符"/>
                <small class="form-text text-muted">必须是中国大陆的银行卡</small>
                <small><span asp-validation-for="BankAccount" class="text-danger"></span></small>
            </div>
        </div>
        <div class="form-group row hidden-neo">
            <label asp-for="BankName" class="col-md-4 col-form-label text-right">开户行</label>
            <div class="col-md-4">
                <input asp-for="BankName" class="form-control" placeholder="如：招商银行上海创智天地支行" data-val="true" data-val-required="请填写开户行" data-val-minlength-min="5" data-val-minlength="长度至少是5个字符" data-val-maxlength-max="30" data-val-maxlength="长度不能超过30个字符"/>
                <small class="form-text text-muted">必须是中国大陆的开户行，开户行大致格式应为 XX银行XX市XX分行（支行），不能只填写 XX银行 或者 XX市XX分行（支行）</small>
                <small><span asp-validation-for="BankName" class="text-danger"></span></small>
            </div>
        </div>
        <div class="form-group row hidden-cny">
            <label asp-for="GivebackNeoAddress" class="col-md-4 col-form-label text-right">接受回馈的NEO地址</label>
            <div class="col-md-4">
                <input asp-for="GivebackNeoAddress" class="form-control" data-val="true" data-val-required="请填写NEO地址" data-val-regex-pattern="A[F-HJ-NP-Za-f][1-9A-HJ-NP-Za-km-z]{32}" data-val-regex="地址格式不正确"/>
                <small class="form-text text-muted">请确保该地址归您所有</small>
                <small><span asp-validation-for="GivebackNeoAddress" class="text-danger"></span></small>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label text-right"></label>
            <div class="col-md-4">
                <input type="submit" value="提交申请" class="btn btn-secondary" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-form-label col-md-4"></label>
            <div class="col-md-4">
                <span class="text-danger">@ViewBag.Message</span>
            </div>
        </div>
    </form>
</div>
@Html.Partial("_NotePartialPage")

@section Scripts {
    <script>
        function setChoose() {
            if ($("#select1").val() == 0) {
                $(".hidden-neo").show();
                $(".hidden-cny").hide();
            }
            else {
                $(".hidden-neo").hide();
                $(".hidden-cny").show();
            }
        }
        setChoose();
        $("#menu_list a").css("border-bottom", "none")
        $("#menu_list li.nav-item [href='/giveback']").css("border-bottom", "2px solid #58bf00")
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
