@model IEnumerable<NeoWeb.Models.ICO1>

@{
    ViewData["Title"] = "回馈计划列表 ICO1";
}
@section Styles{
    <style>
        body, .navbar-inverse {
            background-color: #fff;
        }

        .table {
            margin-bottom: 100px;
        }
    </style>
}
<div class="container">
    <div class="text-center list1">
        <h2 class="m2">回馈计划列表 ICO1</h2>
        <a href="~/giveback/list2">点击查看ICO2列表</a>
    </div>
    <div class="list1">
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#rmb" aria-controls="rmb" role="tab" data-toggle="tab">接受人民币 (@Model.Where(p => p.GivebackNeoAddress == null).Count()) ￥@Model.Where(p => p.GivebackNeoAddress == null).Sum(p => p.GiveBackCNY)</a></li>
            <li role="presentation"><a href="#neo" aria-controls="profile" role="tab" data-toggle="tab">接受NEO (@Model.Where(p => p.GivebackNeoAddress != null).Count()) ￥@Model.Where(p => p.GivebackNeoAddress != null).Sum(p => p.GiveBackCNY)</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="rmb">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                微天使邮箱
                            </th>
                            <th>
                                应得人民币
                            </th>
                            <th>
                                银行卡开户人
                            </th>
                            <th>
                                银行账号
                            </th>
                            <th>
                                开户行
                            </th>
                            <th>
                                提交时间
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Where(p => p.GivebackNeoAddress == null).OrderBy(p => p.CommitTime))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GiveBackCNY)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BankAccount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BankName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CommitTime)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div role="tabpanel" class="tab-pane" id="neo">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                微天使邮箱
                            </th>
                            <th>
                                应得人民币
                            </th>
                            <th>
                                接受回馈的NEO地址
                            </th>
                            <th>
                                提交时间
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Where(p => p.GivebackNeoAddress != null).OrderBy(p => p.CommitTime))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GiveBackCNY)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GivebackNeoAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CommitTime)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $("#menu_list a").css("border-bottom", "none")
        $("#menu_list li.menu-item [href='/giveback']").css("border-bottom", "2px solid #58bf00")
    </script>
}