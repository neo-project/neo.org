        toolbar: 'undo redo | a11ycheck casechange blocks | bold italic backcolor | alignleft aligncenter alignright alignjustify |' +
            'bullist numlist checklist outdent indent | removeformat | code table help',
        image_advtab: true,
        default_link_target: "_blank",
        images_upload_url: "../../../../blog/upload",
        init_instance_callback: function (editor) {
            editor.on('Change', function (e) {
                localStorage.setItem('event_en', editor.getContent());
            });
        }
    });
    function loadDraft()
    {
        var a = tinyMCE.get('EnglishDetails');
        if(a != null) a.setContent(localStorage.getItem('event_en'));

        var b = tinyMCE.get('ChineseDetails');
        if (b != null) b.setContent(localStorage.getItem('event_zh'));

        var c = tinyMCE.get('EnglishContent');
        if (c != null) c.setContent(localStorage.getItem('blog_en'));

        var d = tinyMCE.get('ChineseContent');
        if (d != null) d.setContent(localStorage.getItem('blog_zh'));
    }
</script>
