@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav mb-5">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark mt-5 bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name !</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn mt-4 btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn mt-4 mr-3" asp-area="Identity" asp-page="/Account/Register">Register</a>
            <a class="btn mt-4" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
