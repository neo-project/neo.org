@using Microsoft.AspNetCore.Identity
@using NeoWeb.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="text-center login-part">
    @if (SignInManager.IsSignedIn(User))
    {
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <a asp-area="" asp-controller="Manage" asp-action="Index" class="btn btn-sm btn-light" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            <button type="submit" class="btn btn-sm btn-light">Log out</button>
        </form>
    }
    else
    {
        @*<a class="btn btn-sm btn-light" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        <a class="btn btn-sm btn-light" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>*@
    }

</div>
